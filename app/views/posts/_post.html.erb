 <div class="post-preview">
    <a href=<%=post_url(post)%>
        <h2 class="post-title"><%= post.title %></h2>
        <h3 class="post-subtitle"><%= post.body %></h3>
    </a>
    <p class="post-meta">
        Posted by
        <a href="#!"><%= post.user.name %></a>
        on <%=post.created_at.strftime("%B %d, %Y").gsub(' 0', ' ') %>
    </p>
</div>